<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://asyncode.com/View"
	xmlns:mg="http://asyncode.com/Mongo"
	xmlns:op="http://asyncode.com/Interpreter"
	xmlns:h="http://asyncode.com/Headers"
	inherits="_super_">

	<param name="id"/>

	<condition name="isLoggedIn">$ss.role is 'admin'</condition>

	<set name="updateUser" command="mg:update" mg:coll="users">
		<where>{
			"_id":objectID($.id),
			"suspended": {
				"$ne":true
			}
		}
		</where>
		{
			"$set":{
				"role":'admin',
				"modtime":now()
			}
		}
	</set>

	<set name="redirect"
			 command="h:redirect"
			 h:location="/users/showUser/{$.id}/"/>

	<output XSLTFile="None"/>

</view>
